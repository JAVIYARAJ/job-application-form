<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Application Form</title>
    <style>
        fieldset {
            border-radius: 10px;
            padding-left: 100px;
            padding-right: 100px;
        }

        .dbl_input {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        #container {
            height: 400px;
            width: 100%;
        }

        #addEduBtn {
            font-size: 30px;
            font-weight: 900;
            color: black;
        }

        #state {
            height: 30px;
        }

        .col {
            margin: 10px;
        }

        #col-2 {
            display: flex;
            justify-content: space-between;
            align-items: center;

        }

        #lang_cols {
            margin: 10px;
        }


        #submtBtn {
            background-color: cadetblue;
            border-radius: 10px;
            height: 30px;
            width: 100px;
            margin: 10px;
        }

        .heading {
            text-align: center;
        }
    </style>
</head>

<body>
    <div id="container">
        <h3 class="heading">Job Application Form</h3>
        <form action="/insert" method="post">

            <!-- basic infomation -->
            <fieldset id="basic_info">
                <legend>Basic details</legend>
                <div class="dbl_input">
                    <div class="col">
                        <label for="fname">First Name</label>
                        <input type="text" name="fname" id="fname">
                    </div>
                    <div class="col">
                        <label for="lname">Last Name</label>
                        <input type="text" name="lname" id="lname">
                    </div>
                </div>
                <div class="dbl_input">
                    <div class="col">
                        <label for="designation">Designation</label>
                        <input type="text" name="designation" id="designation">
                    </div>
                    <div class="col">
                        <label for="address1">Address1</label>
                        <input type="text" name="address1" id="address1">
                    </div>
                </div>
                <div class="dbl_input">
                    <div class="col">
                        <label for="email">Email</label>
                        <input type="text" name="email" id="email">
                    </div>
                    <div class="col">
                        <label for="address2">Address2</label>
                        <input type="text" name="address2" id="address2">
                    </div>
                </div>
                <div class="dbl_input">
                    <div class="col">
                        <label for="phone">phone Number</label>
                        <input type="text" name="phone" id="phone">
                    </div>
                    <div class="col">
                        <label for="city">city</label>
                        <input type="text" name="city" id="city">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    </div>
                </div>
                <div class="dbl_input">
                    <div id="gender-div">
                        <label for="gender">Gender</label>
                        <input type="radio" name="gender" value="male" id="gender">Male
                        <input type="radio" name="gender" id="gender">Female
                        <input type="radio" name="gender" id="gender">Other
                    </div>
                    <div id="state-div">
                        <label for="state">State</label>
                        <select name="state" id="state">

                            <% for(let i=0;i< state_menu.length;i++) {%>
                                <option value="<%= state_menu[i].option_value %>">
                                    <%= state_menu[i].option_value %>
                                </option>
                                <%}%>

                        </select>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    </div>

                </div>
                <div class="dbl_input">
                    <div class="col">
                        <label for="relationship">Relationship</label>
                        <select name="relationship" id="relationship">

                            <% for(let i=0;i< option_menu.length;i++) {%>
                                <option value="<%= option_menu[i].option_value %>">
                                    <%= option_menu[i].option_value %>
                                </option>
                                <%}%>
                        </select>
                    </div>
                </div>
                <div class="dbl_input">
                    <div class="col">
                        <label for="dob">Date of Birth</label>
                        <input type="date" name="dob" id="dob">
                    </div>
                    <div class="col">
                        <label for="zcode">Zip code</label>
                        <input type="text" name="zcode" id="zcode">
                    </div>
                </div>

            </fieldset>
            
            <!-- Education infomation -->
            <fieldset id="edu_info">
                <legend>
                    Education Detail
                </legend>
                <div id="addEduBtn">
                    <input type="button" id="addEdu" value="Add Education">
                </div>
                <div id="edu_info">
                    <div>
                        <div class="dbl_input">
                            <div class="col">
                                <label for="edu_course">Name of course</label>
                                <select name="edu_course">
                                    <% for(let i=0;i< courses.length;i++) {%>
                                        <option value="<%= courses[i].course_name %>">
                                            <%= courses[i].course_name %>
                                        </option>
                                        <%}%>
                                </select>
                               
                            </div>
                            <div class="col">
                                <label for="edu_board">Name of Board</label>
                                <input type="text" name="edu_board">
                            </div>
                            <div class="col">

                                <label for="edu_passing_year">Passing year</label>
                                <input type="text" name="edu_passing_year">
                            </div>
                            <div class="col">
                                <label for="edu_per">Percentage</label>
                                <input type="text" name="edu_per">
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>

            <!-- Experience infomation -->
            <fieldset id="exe">
                <legend>
                    Work Experience
                </legend>
                <div id="addExpeBtn">
                    <input type="button" value="Add Experience" id="exeBtn">
                </div>
                <div id="exe_info">
                    <div class="dbl_input">
                        <div class="col">
                            <label for="exe_company_name">Company Name</label>
                            <input type="text" name="exe_company_name"
                                >
                        </div>
                        <div class="col">
                            <label for="exe_designation">Designation</label>
                            <input type="text" name="exe_designation">
                        </div>
                        <div class="col">
                            <label for="exe_from">From</label>
                            <input type="date" name="exe_from">
                        </div>
                        <div class="col">
                            <label for="exe_to">To</label>
                            <input type="date" name="exe_to">
                        </div>
                    </div>
                </div>
            </fieldset>

            <!-- Language and techonology infomation -->

            <div id="col-2">

                <!-- Language infomation -->
                <fieldset id="lang">

                    <legend>Language Know</legend>
                    <div id="lang_info">
                       
                        <% for(let i=0;i<languages.length;i++) {%>
                            <div id="lang_cols">
                                <input type="checkbox" name="lang_name" value="<%= languages[i].option_value %>">
                                <label for="lang_hindi">
                                    <%= languages[i].option_value %>
                                </label>

                                <input type="checkbox" name="lang_type<%=i%>" value="yes">
                                <label for="lang_type">Read</label>

                                <input type="checkbox" name="lang_type<%=i%>" value="yes">
                                <label for="lang_type">Speak</label>

                                <input type="checkbox" name="lang_type<%=i %>" value="yes">
                                <label for="lang_type">Write</label>
                            </div>
                        <%}%>
                        
                    </div>

                    <!-- Technology infomation -->
                </fieldset id="tech">
                <fieldset>
                    <legend>Technology you know</legend>
                    <div id="tech_info">
                        <% for(let i=0;i<technologies.length;i++) {%>
                            <div id="lang_cols">

                                <input type="checkbox" name="tech_main" value="<%= technologies[i].option_value %>">
                                <label for="tech_main">
                                    <%= technologies[i].option_value %>
                                </label>
                                
                                <input type="radio" name="tech_type<%= technologies[i].option_value %>" value="beginner">
                                <label for="tech_type<%= technologies[i].option_value %>">Beginner</label>
    
                                <input type="radio" name="tech_type<%= technologies[i].option_value %>" value="mideator">
                                <label for="tech_type<%= technologies[i].option_value %>">Mideator</label>
                                
                                <input type="radio" name="tech_type<%= technologies[i].option_value %>" value="expert">
                                <label for="tech_type<%= technologies[i].option_value %>">Expert</label>

                            </div>
                        <%}%>
                        

                    </div>
                </fieldset>

            </div>

            <!-- Referance infomation -->

            <fieldset id="ref_info">
                <legend>
                    Referance Contact
                </legend>
                <div id="addEduBtn">
                    <input type="button" value="Add Referance" id="refBtn">
                </div>
                <div id="pref_info">
                    <div class="dbl_input">
                        <div class="col">
                            <label for="ref_name">Person Name</label>
                            <input type="text" name="ref_name">
                        </div>
                        <div class="col">
                            <label for="ref_number">Contact Number</label>
                            <input type="text" name="ref_number">
                        </div>
                        <div class="col">
                            <label for="ref_relation">Relation</label>
                            <input type="text" name="ref_relation">
                        </div>
                
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <div class="dbl_input">
                    <div class="col">
                        <label for="pref_location">Preferd Location</label>
                        <select name="pref_location" id="pref_location">

                            <% for(let i=0;i< pref_menu.length;i++) {%>
                                <option value="<%= pref_menu[i].option_value %>">
                                    <%= pref_menu[i].option_value %>
                                </option>
                                <%}%>
                        </select>
                    </div>
                    <div id="ctc_card">
                        <div class="col">
                            <label for="notice_period">Notice Peroid</label>
                            <input type="text" name="notice_period" id="notice_period">
                        </div>
                        <div class="col">
                            <label for="expacted_ctc">Expacted CTC</label>
                            <input type="text" name="expacted_ctc" id="expacted_ctc">
                        </div>
                        <div class="col">
                            <label for="current_ctc">Current CTC</label>
                            <input type="text" name="current_ctc" id="current_ctc">
                        </div>

                    </div>
                    <div>
                        <!-- department infomation -->

                        <label for="department">Department</label>
                        <select name="department" id="department">

                            <% for(let i=0;i< department_menu.length;i++) {%>
                                <option value="<%= department_menu[i].option_value %>">
                                    <%= department_menu[i].option_value %>
                                </option>
                                <%}%>
                        </select>
                    </div>
                </div>
            </fieldset>
            <input type="submit" id="submtBtn" value="submit">
        </form>
    </div>
</body>
    <script>

    //counter declaration for set dynamic ids in html element
    var edu_counter = 1;
    var exe_counter = 1;
    var ref_counter = 1;

    //this counter 1 because at least one time show
    var lang_counter = 1;
    var tech_counter = 1;

    var language_list = ["Hindi"];
    var technology_list = ["Java"];

    //form whole data variable declaration
    var candidateData = [];

    let id_list = [
        "fname", "lname", "designation", "address1", "address2", "email", "phone", "city", "gender", "state", "relationship", "dob"
    ];


    var edu=document.getElementById("addEdu");
    var exe=document.getElementById("exeBtn");
    var ref=document.getElementById("refBtn");
    edu.addEventListener('click',()=>{
        addEducationCard();
    });
    exe.addEventListener('click',()=>{
        addEdxperienceCard();
    });
    ref.addEventListener('click',()=>{
        addRefrenceCard();
    });


    function addEducationCard() {
        
        edu_counter++;
        var edu_card = document.getElementById("edu_info");
        var create_div = document.createElement("div");
        create_div.classList.add("edu_component");
        var content = `
        <div>
            <div class="dbl_input">
                <div class="col">
                    <label for="edu_course">Name of course</label>
                    <select name="edu_course">
                                <% for(let i=0;i< courses.length;i++) {%>
                                    <option value="<%= courses[i].course_name %>">
                                        <%= courses[i].course_name %>
                                    </option>
                                <%}%>
                    </select>
                </div>
                <div class="col">
                    <label for="edu_board">Name of Board</label>
                    <input type="text" name="edu_board">
                </div>
                <div class="col">
                    <label for="edu_passing_year">Passing year</label>
                    <input type="text" name="edu_passing_year">
                </div>
                <div class="col">
                    <label for="edu_per">Percentage</label>
                    <input type="text" name="edu_per">
                </div>
            </div></div>`;

        create_div.innerHTML = content;
        edu_card.appendChild(create_div);
    }

    function addEdxperienceCard() {
        exe_counter++;
        var edu_card = document.getElementById("exe_info");
        var create_div = document.createElement("div");
        var content = `
        <div class="dbl_input">
        <div class="col">
            <label for="exe_company_name">Company Name</label>
            <input type="text" name="exe_company_name">
        </div>
        <div class="col">
            <label for="exe_designation">Designation</label>
            <input type="text" name="exe_designation">
        </div>
        <div class="col">
            <label for="exe_from">From</label>
            <input type="date" name="exe_from">
        </div>
        <div class="col">
            <label for="exe_to">To</label>
            <input type="date" name="exe_to">
        </div>
    </div>
    `;

        create_div.innerHTML = content;
        edu_card.appendChild(create_div);
    }

    function addRefrenceCard() {
        ref_counter++;
        var ref_card = document.getElementById("pref_info");
        var create_div = document.createElement("div");
        var content = `
        
        <div class="dbl_input">
            <div class="col">
                <label for="ref_name">Person Name</label>
                <input type="text" name="ref_name">
            </div>
            <div class="col">
                <label for="ref_number">Contact Number</label>
                <input type="text" name="ref_number">
            </div>
            <div class="col">
                <label for="ref_relation">Relation</label>
                <input type="text" name="ref_relation">
            </div>

        </div>
        `;
        create_div.innerHTML = content;
        ref_card.appendChild(create_div);
    }
    </script>
</html>